    <MudSpacer/>
    <MudTooltip Text="Experience" Placement="Placement.Top">
        <MudIconButton Icon="@Icons.Material.Filled.Work" Color="Color.Primary" OnClick=@(()=> NavigationManager.NavigateTo("/experience")) />
    </MudTooltip>
    <MudSpacer/>
    <MudTooltip Text="About" Placement="Placement.Top">
        <MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Primary" OnClick=@(()=> NavigationManager.NavigateTo("/about")) />
    </MudTooltip>
